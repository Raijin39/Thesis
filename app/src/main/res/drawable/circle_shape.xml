<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Adding a gradient to create a 3D effect -->
    <gradient
        android:startColor="#C1F0C1"
        android:centerColor="#9FE7E7"
        android:endColor="#A0C9FF"
        android:angle="0" />

    <!-- Adding an inner shadow -->
    <size
        android:width="200dp"
        android:height="200dp" />


    <!-- Adding an outer shadow -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>
